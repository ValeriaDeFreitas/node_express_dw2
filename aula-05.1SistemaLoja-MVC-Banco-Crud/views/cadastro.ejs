<%- include ('partials/header.ejs') %>
    <% if (messages.danger) {%>
        <div class="alert alert-danger">
            <%= messages.danger %>
        </div>
        <%}%>
            <div class="wrapper">
                <h1 class="label">Bem vindo!</h1>
                <h2 class="label">Efetue cadastro para entrar</h2>
                <div class="container conteiner-c">
                    <div class="card-c mt-4">
                        <div class="card-header">
                            <h2>Cadastro de usuário</h2>
                        </div>
                        <div class="card-body-c">
                            <form action="/createUsers" method="POST">
                                <label>E-mail:</label>
                                <input type="email" class="form-control" name="email" placeholder="email@exemplo.com"
                                    required><br>

                                <label>Senha:</label>
                                <input type="password" class="form-control" name="password"
                                    placeholder="Insira uma senha com no mínimo 8 caracteres" required><br>

                                <input type="submit" class="btn btn-success btn-block" value="Cadastrar"
                                    style="background-color: #914F1E; border-color: #914F1E;">
                            </form>
                            <hr>
                            <h6>Já possui conta? <a href="/login" style="color: white;">Faça o login!</a></h6>
                        </div>
                    </div>
                </div>
            </div>
            <%- include ('partials/footer.ejs') %>