<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <div class="container my-5">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-info text-white">
                    <h1>Escolha seus filmes favoritos </h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% imagens.forEach(imagens=> { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <img src="uploads/<%= imagens.file %>" alt="Erro" class="card-img-top"
                                        style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title" style="font-size: 1.1rem; color: #1F509A;">
                                            <%= imagens.titulo %>
                                        </h5>
                                        <p class="card-text" style="font-size: 0.9rem; color: #1F509A;">Ano de
                                            Lançamento:
                                            <%= imagens.ano %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <h4 class="text-center mb-4" style="color: 1B3C73;">Adicionar um Novo Filme</h4>
                    <form action="/upload" method="POST" enctype="multipart/form-data">
                        <div class="form-group mx-5">
                            <label for="titulo">Título:</label>
                            <input type="text" name="titulo" id="titulo" placeholder="Insira o título do filme"
                                class="form-control mx-3 me-3" required>
                        </div>
                        <div class="form-group mt-3 mx-5">
                            <label for="ano">Ano:</label>
                            <input type="number" name="ano" id="ano" placeholder="Insira o ano do filme"
                                class="form-control mx-3 me-3" required>
                        </div>
                        <div class="form-group mt-3  mx-5">
                            <label for="file">Selecione a imagem:</label>
                            <input type="file" name="file" id="file" class="form-control mx-3 me-3" required>
                        </div>
                        <div class="form-group mt-3  mx-5">
                            <input type="submit" value="Enviar" class="btn btn-info w-100 text-white">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include ('partials/footer.ejs') %>